<div class="container-narrow">
  <%= render "partials/header" %>
	<hr>
  	<div class="row">
      <%= form_tag("/search/result", :method => "get") do %>
      <div class="span3">
      	<%= label_tag(:make, "Marca:") %>
      	<%= select_tag "make", options_from_collection_for_select(@marcas, "id", "name"), :prompt => "Select Make" %>
      </div>
	  	<div class="span3">
        <%= label_tag(:state, "State:") %>
        <%= select_tag "state", options_from_collection_for_select(@states, "id", "name"), :prompt => "Select State" %>
      </div>
      <div class="span9">
        <%= submit_tag  "Search", :id => "submit", :class => "btn" %>
      </div>
    	<% end %>
    </div>
  
  <hr>
  
  <!-- Resultados -->
  <div id="resultados">
    <div class="well well-large">Start searching</div>
  </div>
  <hr>
  
  <div class="footer">
    <p>Â© Company 2013</p>
  </div>
</div><!-- /container -->
